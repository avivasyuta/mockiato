{
  "manifest_version": 3,
  "name": "Mockiato: Mock API calls seamlessly",
  "description": "Adds the API mocker Mockiato to Dev Tools for seamless integration & testing.",
  "version": "0.1.0",
  "devtools_page": "devtools.html",
  "icons": {
    "16": "mockiato-16.png",
    "32": "mockiato-32.png",
    "48": "mockiato-48.png",
    "128": "mockiato-128.png",
    "512": "mockiato-512.png"
  },
  "action": {
    "default_icon": {
      "16": "mockiato-16.png",
      "32": "mockiato-32.png",
      "48": "mockiato-48.png",
      "128": "mockiato-128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "web_accessible_resources": [{
    "resources": ["injectInterceptor.js"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ]
}
